<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
        tools:targetApi="31">

        <activity
            android:name=".UI.AdminLogin"
            android:exported="false"
            android:label="Admin Login"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".UI.UserLogin"
            android:exported="false"
            android:label="User Login"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".UI.NewUser"
            android:exported="false"
            android:label="New User"
            android:parentActivityName=".UI.UserLogin"/>
        <activity
            android:name=".UI.NewAdmin"
            android:exported="false"
            android:label="New Admin"
            android:parentActivityName=".UI.AdminLogin"/>
        <activity
            android:name=".UI.HomePage"
            android:exported="false"
            android:label="Testing Area"
            android:parentActivityName=".UI.UserLogin"/>
        <activity
            android:name=".UI.AdminHomePage"
            android:exported="false"
            android:label="Test Maintenance Area"
            android:parentActivityName=".UI.AdminLogin"/>
        <activity
            android:name=".UI.TestCaseDetails"
            android:exported="false"
            android:label="Test Case Details"
            android:parentActivityName=".UI.AdminHomePage"/>

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>